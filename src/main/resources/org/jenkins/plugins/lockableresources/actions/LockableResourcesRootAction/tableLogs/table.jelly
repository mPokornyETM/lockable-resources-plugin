<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:i="jelly:fmt" xmlns:t="/lib/hudson">
  <j:if test="${it.getAllLogs().size() == 0}">
    <script type="text/javascript">notificationBar.show('${%resources.no_logs}', notificationBar.WARNING)</script>
    <div class="row py-3">
    <h2 class="jenkins-!-warning-color">${%resources.no_logs}</h2>
    <p>${%resources.no_logs.detail}</p>
    </div>
  </j:if>

  <st:adjunct includes="io.jenkins.plugins.data-tables"/>
  <div class="table-responsive">
    <table
      class="table table-hover table-striped display data-table"
      id="lockable-resources- "
      isLoaded="true"
      data-columns-definition="[null, null, null, null, null]"
      data-table-configuration="{}"
    >
      <colgroup>
        <!-- resouce -->
        <col class="col-width-2 text-end" />
        <!-- priority -->
        <col class="col-width-2 text-end" />
        <!-- timestamp -->
        <col class="col-width-1 text-end" />
        <!-- message -->
        <col class="col-width-6 text-end" />
        <!-- reuqester -->
        <col class="col-width-2 text-end" />
      </colgroup>
      <thead>
        <th>${%logs.table.column.resource}</th>
        <th>${%logs.table.column.priority}</th>
        <th>${%logs.table.column.timestamp}</th>
        <th>${%logs.table.column.message}</th>
        <th>${%logs.table.column.requester}</th>
      </thead>
      <tbody>
        <j:forEach var="logEntry" items="${it.getAllLogs()}">
          <tr>
            <td>
              ${logEntry.resourceID}
            </td>
            <td>
              ${logEntry.priority.getLocalizedName()}
            </td>
            <td data-order="${logEntry.getDate().getTime()}">
            <i:formatDate
                  value="${logEntry.getDate()}"
                  type="both"
                  dateStyle="medium"
                  timeStyle="medium"
                />
            </td>
            <td>
              <j:out value="${logEntry.message}"/>
            </td>
            <td>
              <j:out value="${logEntry.getRequester()}"/>
            </td>
          </tr>
        </j:forEach>
      </tbody>
    </table>
  </div>
</j:jelly>
